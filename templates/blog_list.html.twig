<h2>Aktuelle Artikel</h2>
{% for post in posts %}
    <p>
        <a href="{{ path('content', {slug: post.slug}) }}">{{ post.date|date("d.m.Y") }}: {{ post.title }}</a> <br/>
        {% if post.tags is defined %}
            {% for tag in post.tags %}
                <a href="{{ path('tag', {tag: tag}) }}"><span class="badge text-bg-primary">#{{ tag }}</span></a>
            {% endfor %}
        {% endif %}
    </p>
{% endfor %}