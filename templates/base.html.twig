    <style>
        body {
            font-family: 'Noto Sans Mono';
            background-color: black;
            color: white;
        }

        blockquote {
            background-color: grey;
            padding: 10px;
            font-style: italic;
        }

        #content {
            margin-top: 2%;
        }
    </style>

